<Window x:Class="ZenLayer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="500" Width="400"
        KeyDown="Window_KeyDown">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Configure Hotkeys" FontWeight="Bold" FontSize="16" Margin="0,0,0,20"/>
        
        <TextBlock Text="Open Overlay:"/>
        <TextBox Name="OverlayHotkeyBox" 
                 PreviewKeyDown="HotkeyBox_PreviewKeyDown" 
                 GotFocus="HotkeyBox_GotFocus"
                 LostFocus="HotkeyBox_LostFocus"
                 Tag="Overlay" 
                 Margin="0,0,0,10" 
                 IsReadOnly="True"/>
         
        <TextBlock Text="Take Screenshot:"/>
        <TextBox Name="ScreenshotHotkeyBox" 
                 PreviewKeyDown="HotkeyBox_PreviewKeyDown" 
                 GotFocus="HotkeyBox_GotFocus"
                 LostFocus="HotkeyBox_LostFocus"
                 Tag="Screenshot" 
                 Margin="0,0,0,10" 
                 IsReadOnly="True"/>
        
        <TextBlock Text="Extract Text:"/>
        <TextBox Name="ExtractTextHotkeyBox" 
                 PreviewKeyDown="HotkeyBox_PreviewKeyDown" 
                 GotFocus="HotkeyBox_GotFocus"
                 LostFocus="HotkeyBox_LostFocus"
                 Tag="ExtractText" 
                 Margin="0,0,0,10" 
                 IsReadOnly="True"/>
        
        <TextBlock Text="Color Picker:"/>
        <TextBox Name="ColorPickerHotkeyBox" 
                 PreviewKeyDown="HotkeyBox_PreviewKeyDown" 
                 GotFocus="HotkeyBox_GotFocus"
                 LostFocus="HotkeyBox_LostFocus"
                 Tag="ColorPicker" 
                 Margin="0,0,0,20" 
                 IsReadOnly="True"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Name="SaveButton" Content="Save" Click="SaveButton_Click" Width="80" Margin="5"/>
            <Button Name="ClearButton" Content="Clear All" Click="ClearButton_Click" Width="80" Margin="5"/>
            <Button Name="ResetToDefaultsButton" Content="Reset to Defaults" Click="ResetToDefaultsButton_Click" Width="120" Margin="5"/>
        </StackPanel>
        
        <TextBlock Name="ErrorText" Foreground="Red" Margin="0,10,0,0" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
