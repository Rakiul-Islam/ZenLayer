<UserControl x:Class="ZenLayer.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
             Background="{DynamicResource ApplicationBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SystemAccentColorSecondaryBrush}" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <ui:SymbolIcon Symbol="Layer24" FontSize="28" Foreground="White" Margin="0,0,16,0"/>
                    <TextBlock Text="ZenLayer" Foreground="White" FontSize="24" FontWeight="Bold"/>
                </StackPanel>

                <!-- Instead of opening a window, navigate in same ContentControl -->
                <ui:Button Grid.Column="1" Width="44" Height="44"
                           VerticalAlignment="Center" Appearance="Transparent"
                           Click="SettingsButton_Click">
                    <ui:SymbolIcon Symbol="Settings24" FontSize="20"/>
                </ui:Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" 
              VerticalScrollBarVisibility="Auto" 
              HorizontalScrollBarVisibility="Disabled"
              Padding="24,32,24,24">
            <StackPanel MaxWidth="480" 
               HorizontalAlignment="Center"
               Margin="0,0,0,16">

                <!-- Primary Feature Cards Container -->
                <StackPanel Margin="0,0,0,24">

                    <!-- Enhanced Grayscale Toggle Card -->
                    <ui:CardControl Margin="0,0,0,20">
                        <Border Padding="24,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header Section -->
                                <StackPanel Grid.Row="0" 
                                   Margin="0,0,0,16">
                                    <TextBlock Text="Grayscale Filter" 
                                      FontSize="20" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>
                                    <TextBlock Text="Reduces visual distractions by removing colors from your screen" 
                                      FontSize="14"
                                      Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      LineHeight="20"/>
                                </StackPanel>

                                <!-- Status Section -->
                                <Border Grid.Row="1" 
                               Background="{DynamicResource ControlFillColorDefaultBrush}"
                               CornerRadius="8"
                               Padding="16,14"
                               Margin="0,0,0,20">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Name="StatusIndicator"
                                       Width="10" Height="10" 
                                       Fill="{DynamicResource SystemFillColorCriticalBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                                        <TextBlock Name="FilterStatusText"
                                          Text="Filter is currently OFF" 
                                          FontSize="14"
                                          FontWeight="Medium"
                                          VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Action Button -->
                                <ui:Button Name="ToggleButton"
                                  Grid.Row="2"
                                  Content="Toggle Grayscale Filter"
                                  HorizontalAlignment="Stretch"
                                  Height="48"
                                  FontSize="15"
                                  FontWeight="Medium"
                                  Click="ToggleButton_Click">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="ColorBackground24"/>
                                    </ui:Button.Icon>
                                </ui:Button>
                            </Grid>
                        </Border>
                    </ui:CardControl>

                    <!-- Enhanced Screenshot Card -->
                    <ui:CardControl Margin="0,0,0,20">
                        <Border Padding="24,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header Section -->
                                <StackPanel Grid.Row="0" 
                                   Margin="0,0,0,20">
                                    <TextBlock Text="Screenshot Tool" 
                                      FontSize="20" 
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,8"/>
                                    <TextBlock Text="Capture selected areas of your screen instantly with a simple click" 
                                      FontSize="14"
                                      Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                      TextWrapping="Wrap"
                                      LineHeight="20"/>
                                </StackPanel>

                                <!-- Action Button -->
                                <ui:Button Name="ScreenshotButton"
                                  Grid.Row="1"
                                  Content="Take a Screenshot"
                                  HorizontalAlignment="Stretch"
                                  Height="48"
                                  FontSize="15"
                                  FontWeight="Medium"
                                  Click="ScreenshotButton_Click">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="Camera24"/>
                                    </ui:Button.Icon>
                                </ui:Button>
                            </Grid>
                        </Border>
                    </ui:CardControl>
                </StackPanel>

                <!-- Information Section -->
                <StackPanel Margin="0,4,0,0">
                    <!-- Enhanced Keyboard Shortcut Info -->
                    <ui:InfoBar Name="ShortcutInfoBar"
                       Title="Quick Access Shortcut"
                       Message="Press Windows + Ctrl + X anytime to toggle grayscale filter (works when app is minimized)"
                       IsOpen="True"
                       IsClosable="False"
                       Severity="Informational"
                       Margin="0,0,0,8"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
