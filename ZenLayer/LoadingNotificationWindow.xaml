<Window x:Class="ZenLayer.LoadingNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing" 
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="Manual">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main loading panel -->
        <Border Name="MainBorder"
                Grid.Row="0"
                Background="#E6000000"
                CornerRadius="15"
                Padding="25,15"
                MinWidth="200"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Loading Animation -->
                <TextBlock Name="LoadingIcon" 
                           Text="⟳" 
                           FontSize="18" 
                           Foreground="White" 
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotation"/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <!-- Status Text -->
                <TextBlock Name="StatusText" 
                           Text="Extracting text..." 
                           FontSize="14" 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>

                <!-- Success/Error Icon (initially hidden) -->
                <TextBlock Name="StatusIcon"
                           FontSize="18"
                           Foreground="White"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- Preview Toggle Button -->
                <Button Name="PreviewToggleButton"
                        Content="▼"
                        FontSize="12"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="12,0,0,0"
                        Padding="8,4"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        ToolTip="Show/Hide image preview"
                        Click="PreviewToggleButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#40FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#60FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Preview Panel (initially collapsed) -->
        <Border Name="PreviewPanel"
                Grid.Row="1"
                Background="#E6000000"
                CornerRadius="15"
                Padding="15"
                Margin="0,5,0,0"
                HorizontalAlignment="Center"
                Visibility="Collapsed">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Image Preview:"
                           FontSize="12"
                           Foreground="#CCFFFFFF"
                           Margin="0,0,0,8"
                           HorizontalAlignment="Center"/>

                <Border BorderBrush="#40FFFFFF"
                        BorderThickness="1"
                        CornerRadius="8"
                        MaxWidth="300"
                        MaxHeight="200">
                    <Image Name="PreviewImage"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Border>

                <TextBlock Name="ImageInfoText"
                           FontSize="10"
                           Foreground="#99FFFFFF"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center"
                           Text="Loading image..."/>
            </StackPanel>
        </Border>
    </Grid>
</Window>       