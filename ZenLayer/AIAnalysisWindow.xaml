<Window x:Class="ZenLayer.AIAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZenLayer"
        mc:Ignorable="d"
        Title="AI Analysis - ZenLayer" 
        Height="700" 
        Width="900"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Icon="{x:Null}">

    <Window.Resources>
        <!-- Define some styles for consistent theming -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,0,5,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="#E6E6E6"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DDDDDD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#9B59B6"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8E44AD"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#7D3C98"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Cursor" Value="Wait"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#34495E"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*" MinWidth="350"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Image Display -->
        <Border Grid.Column="0" 
                BorderBrush="#E1E8ED" 
                BorderThickness="0,0,1,0" 
                Background="#FAFBFC"
                Padding="15">
            <StackPanel>
                <TextBlock Text="Screenshot" 
                          Style="{StaticResource SectionHeaderStyle}"
                          HorizontalAlignment="Center"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             MaxHeight="450">
                    <Image Name="ScreenshotImage"
                           MaxWidth="300"
                           MaxHeight="400"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10">
                        <Image.Effect>
                            <DropShadowEffect Color="Gray" 
                                            Direction="315" 
                                            ShadowDepth="3" 
                                            Opacity="0.3"/>
                        </Image.Effect>
                    </Image>
                </ScrollViewer>

                <!-- Image Info -->
                <Border Background="White" 
                        BorderBrush="#E1E8ED" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="10" 
                        Margin="0,10,0,0">
                    <TextBlock Name="ImageInfoText"
                              Text="Image ready for AI analysis"
                              FontSize="10"
                              Foreground="#7F8C8D"
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- GridSplitter for resizing -->
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="#E1E8ED"
                      ShowsPreview="True"
                      ResizeBehavior="PreviousAndNext"
                      ResizeDirection="Columns"/>

        <!-- Right Panel - AI Interaction -->
        <!-- RIGHT PANEL -->
        <ScrollViewer Grid.Column="2" 
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <!-- All top content -->
                    <RowDefinition Height="Auto"/>
                    <!-- The AI Response section -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top part of the right panel -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="AI Analysis" 
                       Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Quick Prompts -->
                    <TextBlock Text="Quick Prompts:" 
                       Style="{StaticResource SubHeaderStyle}"/>

                    <WrapPanel Name="QuickPromptsPanel" Margin="0,0,0,15"/>

                    <!-- Custom Prompt -->
                    <TextBlock Text="Prompt:" 
                       Style="{StaticResource SubHeaderStyle}"/>

                    <TextBox Name="PromptTextBox"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Text="Describe what you see in this image and provide any relevant insights."
                     Margin="0,0,0,10"
                     Padding="8"
                     BorderBrush="#BDC3C7"
                     Background="White"/>

                    <!-- Analyze Button -->
                    <Button Name="AnalyzeButton"
                    Content="🚀 Analyze with AI"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Left"/>

                    <!-- AI Response Header -->
                    <TextBlock Text="AI Response:" 
                       Style="{StaticResource SubHeaderStyle}"/>

                    <!-- Copy / Save Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Name="CopyResponseButton"
                        Content="📋 Copy Response"
                        Padding="12,6"
                        Margin="0,0,10,0"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsEnabled="False"/>
                        <Button Name="SaveResponseButton"
                        Content="💾 Save Response"
                        Padding="12,6"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>

                <!-- AI Response Section - FULL HEIGHT -->
                <Border Grid.Row="1"
                BorderBrush="#E1E8ED" 
                BorderThickness="1" 
                CornerRadius="4" 
                Background="White"
                Margin="0,0,0,15">
                    <WebBrowser Name="ResponseWebBrowser"
                        Margin="0"/>
                </Border>
            </Grid>
        </ScrollViewer>

    </Grid>
</Window>