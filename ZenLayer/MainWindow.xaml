<Window x:Class="ZenLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grayscale Filter Toggle" 
        Height="350" 
        Width="450"
        MinHeight="300"
        MinWidth="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with gear button -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <DockPanel>
                <TextBlock Text="ZenLayer" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           DockPanel.Dock="Left"/>
                <Button Name="SettingsButton"
                        Width="32"
                        Height="32"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="SettingsButton_Click"
                        ToolTip="Settings"
                        Background="Transparent"
                        BorderThickness="0"
                        DockPanel.Dock="Right"
                        Cursor="Hand">
                    <TextBlock Text="⚙" FontSize="20" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </DockPanel>
        </Border>

        <!-- Main Content with ScrollViewer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto"
                      PanningMode="Both"
                      Padding="5">
            <StackPanel Margin="30" VerticalAlignment="Center" MinWidth="300">

                <!-- Toggle Button with Dynamic Styling -->
                <Button Name="ToggleButton" 
                       Height="60" 
                       FontSize="16" 
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="ToggleButton_Click"
                       MinWidth="200"
                       Margin="0,0,0,15">

                    <!-- Button Style with rounded corners -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E74C3C"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8"
                                               BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C0392B"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#A93226"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                    <!-- Initial Button Content -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Width="24" 
                               Height="24" 
                               CornerRadius="12"
                               Background="White"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center">
                            <TextBlock Text="●" 
                                      FontSize="14"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="#2C3E50"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Enable Grayscale" 
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="Filter is currently OFF" 
                                      FontSize="11"
                                      Foreground="White"
                                      Opacity="0.8"
                                      Margin="0,2,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- Screenshot Button -->
                <Button Name="ScreenshotButton" 
                       Height="60" 
                       FontSize="16" 
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="ScreenshotButton_Click"
                       MinWidth="200"
                       Margin="0,0,0,20">

                    <!-- Button Style with rounded corners -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8"
                                               BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2980B9"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#21618C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                    <!-- Button Content -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Width="24" 
                               Height="24" 
                               CornerRadius="4"
                               Background="White"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center">
                            <TextBlock Text="📷" 
                                      FontSize="12"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Take a Snapshot" 
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="Select area and capture screenshot" 
                                      FontSize="11"
                                      Foreground="White"
                                      Opacity="0.8"
                                      Margin="0,2,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- Keyboard Shortcut Tip -->
                <Border Background="#ECF0F1" CornerRadius="6" Padding="15" Margin="0,0,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="💡 Keyboard Shortcut" 
                               FontSize="12" 
                               FontWeight="Bold"
                               Foreground="#34495E"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                        <TextBlock Text="Windows + Ctrl + X" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,3"/>
                        <TextBlock Text="Use this shortcut anytime when minimized to system tray" 
                               FontSize="11" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
                <TextBlock Text="You can minimize this window now" 
                    FontSize="12" 
                    FontWeight="SemiBold" 
                    Foreground="#2C3E50" 
                    HorizontalAlignment="Center"
                    Margin="0,15,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <StackPanel>
                <CheckBox Name="StartupCheckBox" 
                         Content="Start with Windows" 
                         Margin="0,0,0,5"
                         Foreground="#2C3E50"
                         Checked="StartupCheckBox_Checked"
                         Unchecked="StartupCheckBox_Unchecked"/>
                <CheckBox Name="MinimizeCheckBox" 
                         Content="Minimize to system tray" 
                         Foreground="#2C3E50"
                         Checked="MinimizeCheckBox_Checked"
                         Unchecked="MinimizeCheckBox_Unchecked"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>