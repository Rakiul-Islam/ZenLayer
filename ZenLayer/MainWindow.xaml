<Window x:Class="ZenLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grayscale Filter Toggle" 
        Height="350" 
        Width="450"
        MinHeight="300"
        MinWidth="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="Windows Grayscale Filter Control" 
                      Foreground="White" 
                      FontSize="18" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"/>
        </Border>

        <!-- Main Content with ScrollViewer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Auto"
                      PanningMode="Both"
                      Padding="5">
            <StackPanel Margin="30" VerticalAlignment="Center" MinWidth="300">



                <!-- Toggle Button with Dynamic Styling -->
                <Button Name="ToggleButton" 
                       Height="60" 
                       FontSize="16" 
                       FontWeight="Bold"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="ToggleButton_Click"
                       MinWidth="200">

                    <!-- Button Style with rounded corners -->
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#E74C3C"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="8"
                                               BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C0392B"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#A93226"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                    <!-- Initial Button Content -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Width="24" 
                               Height="24" 
                               CornerRadius="12"
                               Background="White"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center">
                            <TextBlock Text="●" 
                                      FontSize="14"
                                      FontWeight="Bold"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Foreground="#2C3E50"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Enable Grayscale" 
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="White"
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="Filter is currently OFF" 
                                      FontSize="11"
                                      Foreground="White"
                                      Opacity="0.8"
                                      Margin="0,2,0,0"
                                      TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Button>

                <!-- Keyboard Shortcut Tip -->
                <Border Background="#ECF0F1" 
                       CornerRadius="6" 
                       Padding="15" 
                       Margin="0,20,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="💡 Keyboard Shortcut" 
                                  FontSize="12" 
                                  FontWeight="Bold"
                                  Foreground="#34495E"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,5"
                                  TextWrapping="Wrap"/>
                        <TextBlock Text="Windows + Ctrl + C" 
                                  FontSize="14" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,3"
                                  TextWrapping="Wrap"/>
                        <TextBlock Text="Use this shortcut anytime to toggle" 
                                  FontSize="11" 
                                  Foreground="#7F8C8D"
                                  HorizontalAlignment="Center"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <StackPanel>
                <CheckBox Name="StartupCheckBox" 
                         Content="Start with Windows" 
                         Margin="0,0,0,5"
                         Foreground="#2C3E50"
                         Checked="StartupCheckBox_Checked"
                         Unchecked="StartupCheckBox_Unchecked"/>
                <CheckBox Name="MinimizeCheckBox" 
                         Content="Minimize to system tray" 
                         Foreground="#2C3E50"
                         Checked="MinimizeCheckBox_Checked"
                         Unchecked="MinimizeCheckBox_Unchecked"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>