<Window x:Class="ZenLayer.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" 
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False"
        Background="Transparent"
        WindowState="Maximized"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">

    <Grid Name="MainGrid">
        <Canvas Name="ButtonContainer" Background="Transparent">
            <!-- Central Circular Logo Box -->
            <Border Name="CentralBox" 
                    Width="80" 
                    Height="80"
                    CornerRadius="40"
                    Background="#2C3E50"
                    BorderBrush="#34495E"
                    BorderThickness="3"
                    Opacity="0"
                    RenderTransformOrigin="0.5,0.5">

                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.4"/>
                </Border.Effect>

                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="CentralBoxScale" ScaleX="0.1" ScaleY="0.1"/>
                    </TransformGroup>
                </Border.RenderTransform>

                <Grid>
                    <!-- Logo Image (will be set programmatically) -->
                    <Image Name="LogoImage" 
                           Width="40" 
                           Height="40"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"/>

                    <!-- Fallback icon if no logo is provided -->
                    <TextBlock Name="FallbackIcon"
                               Text="⚙"
                               FontSize="24"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Grayscale Toggle Button - Positioned to the left -->
            <Button Name="GrayscaleButton" 
                    Panel.ZIndex="3"
                    Canvas.Left="-80"
                    Canvas.Top="10"
                    Width="60" 
                    Height="60"
                    Click="GrayscaleButton_Click"
                    Cursor="Hand"
                    RenderTransformOrigin="0.5,0.5"
                    Opacity="0"
                    Background="Transparent"
                    BorderThickness="0">

                <Button.ContextMenu>
                    <ContextMenu Name="GrayscaleContextMenu">
                        <MenuItem Header="Grayscale" Click="GrayscaleMenuItem_Click" Tag="0">
                            <MenuItem.Icon>
                                <TextBlock Text="⚫" FontSize="12" Foreground="Black"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Grayscale Inverted" Click="GrayscaleInvertedMenuItem_Click" Tag="2">
                            <MenuItem.Icon>
                                <TextBlock Text="◐" FontSize="12" Foreground="Black"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Inverted" Click="InvertedMenuItem_Click" Tag="1">
                            <MenuItem.Icon>
                                <TextBlock Text="⚪" FontSize="12" Foreground="Black"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Disable Filter" Click="DisableFilterMenuItem_Click">
                            <MenuItem.Icon>
                                <TextBlock Text="❌" FontSize="12" Foreground="Black"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Button.ContextMenu>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Drop Shadow -->
                            <Ellipse Fill="Black" 
                                     Opacity="0.3" 
                                     Margin="3,3,0,0"/>

                            <!-- Main Button Background -->
                            <Ellipse Fill="#3498DB" 
                                     Stroke="#2980B9" 
                                     StrokeThickness="2"/>

                            <!-- Highlight for hover effect -->
                            <Ellipse Name="HighlightEllipse" 
                                     Fill="White" 
                                     Opacity="0"/>

                            <!-- Content -->
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>

                            <!-- Focus/Selection indicator (hidden) -->
                            <Rectangle Fill="Transparent" 
                                       Stroke="Transparent" 
                                       StrokeThickness="0"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HighlightEllipse" Property="Opacity" Value="0.1"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HighlightEllipse" Property="Opacity" Value="0.2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Button.Style>

                <Button.Content>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⚫" 
                                  FontSize="16" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,2"/>
                        <TextBlock Text="Filter" 
                                  FontSize="9" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Button.Content>

                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ButtonScale" ScaleX="0.1" ScaleY="0.1"/>
                        <TranslateTransform x:Name="ButtonTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <!-- Screenshot Button - Positioned to the top -->
            <Button Name="ScreenshotButton" 
                    Panel.ZIndex="2"
                    Canvas.Left="10"
                    Canvas.Top="-80"
                    Width="60" 
                    Height="60"
                    Click="ScreenshotButton_Click"
                    Cursor="Hand"
                    RenderTransformOrigin="0.5,0.5"
                    Opacity="0"
                    Background="Transparent"
                    BorderThickness="0">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Drop Shadow -->
                            <Ellipse Fill="Black" 
                                     Opacity="0.3" 
                                     Margin="3,3,0,0"/>

                            <!-- Main Button Background -->
                            <Ellipse Fill="#9B59B6" 
                                     Stroke="#8E44AD" 
                                     StrokeThickness="2"/>

                            <!-- Highlight for hover effect -->
                            <Ellipse Name="ScreenshotHighlight" 
                                     Fill="White" 
                                     Opacity="0"/>

                            <!-- Content -->
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>

                            <!-- Focus/Selection indicator (hidden) -->
                            <Rectangle Fill="Transparent" 
                                       Stroke="Transparent" 
                                       StrokeThickness="0"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ScreenshotHighlight" Property="Opacity" Value="0.1"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ScreenshotHighlight" Property="Opacity" Value="0.2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Button.Style>

                <Button.Content>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📷" 
                                  FontSize="16" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,2"/>
                        <TextBlock Text="Shot" 
                                  FontSize="9" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Button.Content>

                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ScreenshotButtonScale" ScaleX="0.1" ScaleY="0.1"/>
                        <TranslateTransform x:Name="ScreenshotButtonTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <!-- Extract Text Button - Positioned to the bottom left -->
            <Button Name="ExtractTextButton"
                    Panel.ZIndex="1"
                    Canvas.Left="-70"
                    Canvas.Top="60"
                    Width="60" 
                    Height="60"
                    Click="ExtractTextButton_Click"
                    Cursor="Hand"
                    RenderTransformOrigin="0.5,0.5"
                    Opacity="0"
                    Background="Transparent"
                    BorderThickness="0">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Drop Shadow -->
                            <Ellipse Fill="Black" 
                                     Opacity="0.3" 
                                     Margin="3,3,0,0"/>

                            <!-- Main Button Background -->
                            <Ellipse Fill="#F39C12" 
                                     Stroke="#E67E22" 
                                     StrokeThickness="2"/>

                            <!-- Highlight for hover effect -->
                            <Ellipse Name="ExtractTextHighlight" 
                                     Fill="White" 
                                     Opacity="0"/>

                            <!-- Content -->
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>

                            <!-- Focus/Selection indicator (hidden) -->
                            <Rectangle Fill="Transparent" 
                                       Stroke="Transparent" 
                                       StrokeThickness="0"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ExtractTextHighlight" Property="Opacity" Value="0.1"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ExtractTextHighlight" Property="Opacity" Value="0.2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Button.Style>

                <Button.Content>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="📄" 
                                  FontSize="16" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,2"/>
                        <TextBlock Text="Text" 
                                  FontSize="9" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Button.Content>

                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ExtractTextButtonScale" ScaleX="0.1" ScaleY="0.1"/>
                        <TranslateTransform x:Name="ExtractTextButtonTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <!-- Color Picker Button - Positioned below the text button -->
            <Button Name="ColorPickerButton" 
                    Panel.ZIndex="0"
                    Canvas.Left="-70"
                    Canvas.Top="130"
                    Width="60" 
                    Height="60"
                    Click="ColorPickerButton_Click"
                    Cursor="Hand"
                    RenderTransformOrigin="0.5,0.5"
                    Opacity="0"
                    Background="Transparent"
                    BorderThickness="0">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Drop Shadow -->
                            <Ellipse Fill="Black" 
                                     Opacity="0.3" 
                                     Margin="3,3,0,0"/>

                            <!-- Main Button Background -->
                            <Ellipse Fill="#E67E22" 
                                     Stroke="#D35400" 
                                     StrokeThickness="2"/>

                            <!-- Highlight for hover effect -->
                            <Ellipse Name="ColorPickerHighlight" 
                                     Fill="White" 
                                     Opacity="0"/>

                            <!-- Content -->
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>

                            <!-- Focus/Selection indicator (hidden) -->
                            <Rectangle Fill="Transparent" 
                                       Stroke="Transparent" 
                                       StrokeThickness="0"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ColorPickerHighlight" Property="Opacity" Value="0.1"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ColorPickerHighlight" Property="Opacity" Value="0.2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </Button.Style>

                <Button.Content>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🎨" 
                                  FontSize="16" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,2"/>
                        <TextBlock Text="Color" 
                                  FontSize="9" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Button.Content>

                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="ColorPickerButtonScale" ScaleX="0.1" ScaleY="0.1"/>
                        <TranslateTransform x:Name="ColorPickerButtonTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <!-- Close Button - Positioned to the right -->
            <Button Name="CloseButton" 
                    Canvas.Left="100"
                    Canvas.Top="15"
                    Width="50" 
                    Height="50"
                    Click="CloseButton_Click"
                    Cursor="Hand"
                    RenderTransformOrigin="0.5,0.5"
                    Opacity="0"
                    Background="Transparent"
                    BorderThickness="0">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="Black" Opacity="0.3" Margin="2,2,0,0"/>
                            <Ellipse Fill="#E74C3C" Stroke="#C0392B" StrokeThickness="2"/>
                            <Ellipse Name="CloseHighlight" Fill="White" Opacity="0"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CloseHighlight" Property="Opacity" Value="0.1"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    </Style>
                </Button.Style>

                <Button.Content>
                    <TextBlock Text="✕" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button.Content>

                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="CloseButtonScale" ScaleX="0.1" ScaleY="0.1"/>
                        <TranslateTransform x:Name="CloseButtonTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

        </Canvas>

        <!-- Loading Notification -->
        <Border Name="LoadingNotification"
            Background="#2C3E50"
            CornerRadius="20"
            Padding="20,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,50,0,0"
            Visibility="Collapsed"
            Opacity="0">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.6"/>
            </Border.Effect>

            <StackPanel Orientation="Horizontal">
                <!-- Loading Animation -->
                <TextBlock Name="LoadingIcon" 
                          Text="⟳" 
                          FontSize="16" 
                          Foreground="White" 
                          Margin="0,0,10,0"
                          VerticalAlignment="Center">
                    <TextBlock.RenderTransform>
                        <RotateTransform x:Name="LoadingRotation" CenterX="8" CenterY="8"/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <!-- Loading Text -->
                <TextBlock Name="LoadingText" 
                          Text="Loading..." 
                          FontSize="14" 
                          Foreground="White" 
                          VerticalAlignment="Center"
                          FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>